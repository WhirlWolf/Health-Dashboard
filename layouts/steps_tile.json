{
  "id": "steps_tile",
  "name": "Tile",
  "description": "Minimal layout with a icon and steps count.",
  "creator": {
    "name": "WhirlWolf",
    "contact": "https://t.me/android_automation_group"
  },
  "metric": "steps",
  "type": "Tile",
  "size": "1x2",
  "version": "1.0",
  "preview": "",
  "features": [
    "minimal",
    "simple"
  ],
  "date_created": "2025-05-29",
  "date_updated": "2025-12-25",
  "min_project_version": "1.0.20251225",
  "min_tasker_version": "6.4-stable",
  "defaults": {
    "text_size_primary": "20",
    "icon_size": "48",
    "icon": "android.resource://net.dinglisch.android.taskerm/drawable/mw_maps_directions_walk"
  },
  "structure": {
    "children": [
      {
        "contentScale": "Fit",
        "url": "%icon",
        "command": "%par1=:=icon",
        "commandPrefix": "HD",
        "cornerRadius": "%corner_radius",
        "isWeighted": false,
        "padding": {
          "top": 5,
          "bottom": 5,
          "start": 15,
          "end": 10
        },
        "size": "%icon_size",
        "type": "Image",
        "useMaterialYouColors": true
      },
      {
        "align": "Left",
        "bold": true,
        "color": "%text_color_primary",
        "fontFamily": "%font_primary",
        "text": "%count",
        "textSize": "%text_size_primary",
        "isWeighted": true,
        "padding": {
          "top": 10,
          "bottom": 10,
          "end": 10
        },
        "type": "Text"
      }
    ],
    "horizontalAlignment": "Center",
    "verticalAlignment": "Center",
    "backgroundColor": "%background_color",
    "cornerRadius": "%corner_radius",
    "isWeighted": true,
    "size": {
      "height": 50,
      "width": 140
    },
    "type": "Row",
    "useMaterialYouColors": true
  }
}
